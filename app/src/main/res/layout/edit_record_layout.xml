<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:foreground="@drawable/effect2"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Record"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                android:padding="8dp"
                android:background="@drawable/edittexteffect"
                android:drawablePadding="12dp"
                android:paddingStart="12dp"
                android:drawableStart="@drawable/ic_person"
                android:id="@+id/etEditFullName"

                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact Numbe"
                android:maxLength="12"
                android:layout_marginTop="4dp"
                android:textSize="20sp"
                android:padding="8dp"
                android:background="@drawable/edittexteffect"
                android:drawablePadding="12dp"
                android:paddingStart="12dp"
                android:drawableStart="@drawable/ic_phone"

                android:id="@+id/etEditContactNumber"
                android:inputType="number"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/etEditUtangDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:drawableStart="@drawable/ic_date"
                        android:drawablePadding="12dp"
                        android:padding="8dp"
                        android:background="@drawable/edittexteffect"
                        android:hint="Current Date"
                        android:inputType="text"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textColor="@color/black"
                        android:textColorHint="#8F8F8F"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:textSize="20sp" />


                </LinearLayout>

                <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="DEBT LIST"
                android:textColor="@color/black"
                android:textSize="20sp" />

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 "
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                    <AutoCompleteTextView
                        android:id="@+id/acEditProd1"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:hint="Product"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textColorHint="#8F8F8F"
                        android:textSize="18sp" />

                    <EditText
                    android:id="@+id/etEditQty1"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:hint="Qty."
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8F8F"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/etEditPrice1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:hint="Price"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8F8F"
                    android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 "
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <AutoCompleteTextView
                    android:id="@+id/acEditProd2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:hint="Product"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8F8F"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/etEditQty2"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:hint="Qty."
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8F8F"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/etEditPrice2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:hint="Price"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8F8F"
                    android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 "
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <AutoCompleteTextView
                    android:id="@+id/acEditProd3"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:hint="Product"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8F8F"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/etEditQty3"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:hint="Qty."
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8F8F"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/etEditPrice3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:hint="Price"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8F8F"
                    android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 "
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <AutoCompleteTextView
                    android:id="@+id/acEditProd4"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:hint="Product"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8F8F"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/etEditQty4"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:hint="Qty."
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8F8F"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/etEditPrice4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:hint="Price"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8F8F"
                    android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 "
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <AutoCompleteTextView
                    android:id="@+id/acEditProd5"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:hint="Product"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8F8F"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/etEditQty5"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:hint="Qty."
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8F8F"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/etEditPrice5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:hint="Price"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8F8F"
                    android:textSize="18sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="157dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Total:"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tvEditTotal"
                        android:layout_width="86dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10dp"
                        android:hint="0.00"
                        android:textColorHint="#8F8F8F"
                        android:textSize="35dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnEditCompute"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:backgroundTint="#DAAB66"
                    android:text="Compute"
                    android:textColor="@color/white" />
                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:backgroundTint="#CF6868"
                    android:text="Delete"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnSaveUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:backgroundTint="#545689"
                    android:text="Save"
                    android:textColor="@color/white" />

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</LinearLayout>
